<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div id="articles">
                {{#if articles}}
                    {{#each articles}}
                        {{#unless isSaved}}
                            <hr>
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">{{this.title}}</h5>
                                    <p class="card-text">{{this.link}}</p>
                                    <div class="btn-group" role="group">
                                        <button class="btn btn-primary save-article" data-id="{{this._id}}">Save This Article</button>
                                        <button class="btn btn-secondary notes" data-id="{{this._id}}">Add/View Notes</button>
                                    </div>
                                </div>
                            </div>
                        {{/unless}}
                    {{/each}}
                {{else}}
                    <div class="row"><h1>There are no unsaved articles yet! Check the saved articles page or hit the scrape button!</h1></div>
                {{/if}}
            </div>
        </div>
        <div class="col-md-4">
            <div id="notes"></div>
        </div>
    </div>
</div>
